<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardItem"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
    android:background="@color/white"
        android:layout_marginEnd="10dp"
        android:padding="10dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/movieBanner"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/transformers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitStart"/>
    <TextView
        android:id="@+id/movieName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Movie Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/movieBanner"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="DATE"
        android:textColor="@color/color_11"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/movieBanner"
       app:layout_constraintTop_toBottomOf="@+id/movieName" />

    <TextView
        android:id="@+id/MovieDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="02-09-2021"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/playDate"
        app:layout_constraintTop_toBottomOf="@+id/movieName" />


    <TextView
        android:id="@+id/playTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="Time"
        android:textColor="@color/color_11"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/movieBanner"
        app:layout_constraintTop_toBottomOf="@+id/playDate" />

    <TextView
        android:id="@+id/MovieTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="11:45"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/MovieDate"
        app:layout_constraintStart_toStartOf="@+id/MovieDate"
        app:layout_constraintTop_toBottomOf="@+id/playDate" />

    <TextView
        android:id="@+id/quantityBooked"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="Quantity"
        android:textColor="@color/color_11"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/movieBanner"
        app:layout_constraintTop_toBottomOf="@+id/playTime" />

    <TextView
        android:id="@+id/MovieQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="500"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/MovieDate"
        app:layout_constraintTop_toBottomOf="@+id/playTime" />

    <TextView
        android:id="@+id/amountPerTicket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text=" &#64;"
        android:textColor="@color/color_11"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/MovieQuantity"
        app:layout_constraintTop_toBottomOf="@+id/playTime" />

    <TextView
        android:id="@+id/MoviePrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="2000"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/amountPerTicket"
        app:layout_constraintTop_toBottomOf="@+id/playTime" />

    <TextView
        android:id="@+id/UserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="Booked By"
        android:layout_marginBottom="10dp"
        android:textColor="@color/color_11"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/movieBanner"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/MovieUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:text="Cedric Dev"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/UserName"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/movieBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
